<body>
    <%- include ('./partials/header.ejs') %>

        <section class="container">
            <form class="modificar-producto" action="/product/<%= productToFind.id %>?_method=put" method="post">
                <div class=" encabezado">
                    <h1>Eliminar / Modificar Producto</h1>
                </div>
                <div class="name">
                    <label for="name">Nombre del producto</label>
                    <input id="name" type="text" name="name" value="<%= productToFind.name %> ">
                </div>
                <div class="description">
                    <label for="description">Descripcion del producto</label>
                    <textarea id="description" type="text"
                        name="description"> <%= productToFind.description %> </textarea>
                </div>
                <div class="img-eliminar-product">
                    <label for="imagen">Imagen del producto</label>
                    <input id="imagen" type="file">
                </div>
                <div class="category">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option <% if(productToFind.category=='in-sale' ) {%>
                            selected
                            <% } %>

                                value="in-sale" >En oferta
                        </option>

                        <option>
                        <option <% if(productToFind.category=='visited' ) {%>
                            selected
                            <% } %>

                                value="visited" >Últimos visitados
                        </option>
                    </select>
                </div>

                <div class="discount">
                    <label for="discount">Descuento del producto</label>
                    <input id="discount" type="text" name="discount" value="<%= productToFind.discount %> ">
                </div>


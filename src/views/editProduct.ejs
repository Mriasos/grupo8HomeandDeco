                <div class="price">
                    <label for="price">Precio del producto</label>
                    <input id="price" type="text" name="price" value="<%= productToFind.price %> ">
                </div>

                <button class="edit"> MODIFICAR</button>

            </form>
            <div class="box-buttonDelete">
                <form class="eliminar-producto" action="/product/<%= productToFind.id %>?_method=delete" method="post">

                    <button type="submit" class="delete"
                        onclick="return confirm('Estas seguro que deseas eliminar este producto?')"> ELIMINAR </button>

                </form>
            </div>

        </section>


<!DOCTYPE html>
<html lang="en">

<head>

    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="css/product.css">
    <title>HANGAR</title>

</head>

<body>
    <%- include ('../partials/header.ejs') %>

    <section class="cuerpo">
        <div class = "container-product-detail">
            <div class = "imagenes">
                <div class = "img-producto-principal">
                    <img width = "100" class="img-principal" src="imagenes/lampara1.jpg" alt="Lampara" ></img>
                </div>
                <!--<div class = "img-productos-secundaria">
                    <div><img width="100" height="100" src="imagenes/lampara2.jpg" alt="Lampara" class="product_img"></img></div>
                    <div><img width="100" height="100" src="imagenes/lampara3.jpg" alt="Lampara" class="product_img"></img></div>
                    <div><img width="100" height="100" src="imagenes/lampara4.jpg" alt="Lampara" class="product_img"></img></div>
                    <div><img width="100" height="100" src="imagenes/lampara5.jpg" alt="Lampara" class="product_img"></img></div>
                    
                    
                </div>-->
            </div>
            <div class="main-article">
                <div class = "flex-conteiner-detalle">
                    <h1 class = "titulo"></h1>
                    <p class = "precio"></p>
                    <div class="build-credit-card">
                        <p><i class="far fa-credit-card"></i></p>
                        <strong class = "cuotas"> CUOTAS</strong>
                        <p>CUOTAS SIN INTERES</p>
                        <strong class = "precio-cuotas"> PRECIO / CUOTAS</strong>
                    </div>
                    <div class = "descuento-efectivo">
                        <p><i class="far fa-money-bill-alt"></i></p>
                        <strong class = "porc-descuento"> discount % </strong>
                        <p>pagando en efectivo</p>
                    </div>
                    <div class= "container-cantidad">
                        <label for="cantidad" class = "cantidad-label">Cantidad</label>
                        <input class = "cantidad-input" name = "cantidad" id = "cantidad" type="number" value="1">
                    </div>
                    <div class = "flex-container-tam">
                        <label for="tamanio">Tama√±o</label>
                    
                        <div class = "flex-container-tam-opcion">
                            <select  class = "button-tam" name = "tamanio">
                                <option disabled="">Seleccione una Opcion</option>
                                        <option value="ESTANDAR">ESTANDAR</option>
                                        <option value="GRANDE">GRANDE</option>
                                        <option value="CHICO/A">CHICO/A</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class = "container-button">
                    <a href="/cart"><button class="button-carrito"><span>AGREGAR AL CARRITO</span></button></a>
                </div>
                <div class = "button-admin">
                    <a href="/admin/createProduct"><button class="button-cargar"><span>CARGAR PRODUCTO</span></button></a>
                    <a href="/admin/deletteProduct"><button class="button-modificar-eliminar"><span>ELIMINAR / MODIFICAR PRODUCTO</span></button></a>
                </div>
                <div class = "medios-envio">
                    <p><i class="fas fa-shipping-fast"></i> MEDIOS DE ENVIO</p>
                </div>
                <div class = "codigo-postal-y-button">
                    <div class= "codigo-postal">
                        <label for="codigo" class = "codigo-label"></label>
                        <input class = "codigo-input" name = "codigo" id = "codigo" type="tell" placeholder="Ingrese su codigo postal">
                    </div>
                    <div>
                        <button class="button-calcular-envio"><span>CALCULAR</span></button>
                    </div>
                </div>
                <div class = "detalle">
                    <h3><strong>DESCRIPCION</strong></h3>
                   
                </div>
            </div>
        </div>
    </section>

    <%- include ('../partials/footer.ejs') %>

